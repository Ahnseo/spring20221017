<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org/zerock/mapper/lecture/MapperTransferMoney">
	
	<!-- send money => where account -->
	<update id="sendMoneyFromOtherAccount">
		UPDATE Bank
		SET balance = balance - ( #{money} )
		WHERE account = #{account}
	</update>
	<!-- receive money => where account -->
	<update id="receiveMoneyFromOtherAccount">
		UPDATE Bank
		SET balance = balance + ( #{money} )
		WHERE account = #{account}
	</update>
	
</mapper>